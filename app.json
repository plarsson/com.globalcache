    "flow": {
        "actions": [
            {
                "id": "send_ir_command",
                "title": {
                    "en": "Send Remote Command"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:com.globalcache&driver_id=ip2ir|wf2ir|flexwifi"
                    },
                    {
                        "name": "connectoraddress",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "iTach connector"
                        }
                    },
                    {
                        "name": "irdevice",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "IR device name"
                        }
                    },
                    {
                        "name": "irfunction",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "IR function name"
                        }
                    }
                ]
            },
            {
                "id": "send_relay_command",
                "title": {
                    "en": "Send Relay Command"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:com.globalcache&driver_id=ip2cc|wf2cc"
                    },
                    {
                        "name": "connectoraddress",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "iTach connector"
                        }
                    },
                    {
                        "name": "outputstate",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "state"
                        }
                    }
                ]
            },
            {
                "id": "send_relay_command_with_duration",
                "title": {
                    "en": "Send Relay Command With Duration"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:com.globalcache&driver_id=ip2cc|wf2cc"
                    },
                    {
                        "name": "connectoraddress",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "iTach connector"
                        }
                    },
                    {
                        "name": "outputstate",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "state"
                        }
                    },
                    {
                        "name": "ccduration",
                        "type": "number",
                        "min": 0,
                        "max": 120000,
                        "placeholder": {
                            "en": "duration in milliseconds"
                        }
                    }
                ]
            },
            {
                "id": "send_serial_command",
                "title": {
                    "en": "Send Serial Command"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:com.globalcache&driver_id=ip2sl|wf2sl"
                    },
                    {
                        "name": "connectoraddress",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "iTach connector"
                        }
                    },
                    {
                        "name": "serialcmd",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "Serial cmd name"
                        }
                    }
                ]
            }
        ]
    }
