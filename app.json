  "flow": {
    "actions": [
			{
				"id": "send_ir_command",
				"title": {
					"en": "Send Remote Command"
				},
				"args": [
                    { "name": "device", "type": "device", "filter": "driver_uri=homey:app:com.globalcache&driver_id=ip2ir|wf2ir" },
                    {
                        "name": "connectoraddress",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "iTach connector"
                        }
                    },
                    {
                        "name": "irdevice",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "IR device name"
                        }
                    },
                    {
                        "name": "irfunction",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "IR function name"
                        }
                    }
                ]
        },
        {
            "id": "send_relay_command",
            "title": {
                "en": "Send Remote Command"
            },
            "args": [
                { "name": "device", "type": "device", "filter": "driver_uri=homey:app:com.globalcache&driver_id=ip2cc|wf2cc" },
                {
                    "name": "connectoraddress",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "iTach connector"
                    }
                },
                {
                    "name": "outputstate",
                    "type": "autocomplete",
                    "placeholder": {
                        "en": "state"
                    }
                }
            ]
        },
        {
			"id": "send_serial_command",
            "title": {
                "en": "Send Serial Command"
            },
            "args": [
                { "name": "device", "type": "device", "filter": "driver_uri=homey:app:com.globalcache&driver_id=ip2sl|wf2sl" },
                {
